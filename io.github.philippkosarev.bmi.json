{
    "id" : "io.github.philippkosarev.bmi",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "command" : "bmi",
    "finish-args" : [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",
        "--share=ipc"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/blueprint-compiler",
                    "tag": "v0.18.0",
                    "commit": "07c9c9df9cd1b6b4454ecba21ee58211e9144a4b",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\d.]+)$"
                    }
                }
            ]
        },
        {
            "name" : "bmi",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/PhilippKosarev/bmi",
                    "tag" : "v4.0"
                }
            ]
        }
    ]
}